            <div class="form-group row">
                <div class="col-md-2">
                    <h5 style="margin-top: 3px; margin-left: 0;">Brand</h5>
                </div>
                <div class="col-sm-10">
                    <a href="#">Brand 1</a>
                </div>
            </div>

            <h5 style="margin-top: 10px; margin-bottom: 5px">Size</h5>
            <select class="form-control" id="size" name="size" required>
                {{#each sizes}}
                    <option value="{{id}}">{{size}}</option>
                {{/each}}
            </select>

            <h5 style="margin-top: 20px; margin-bottom: 5px">Quantity</h5>
            <input type="number" value="1" class="form-control" id="quantity" name="quantity" required>

            <br />
            <button class="btn btn-primary" id="add-to-cart" data-cart-add="{{product.id}}">Add to cart</button>
        </div>
        <div class="clearfix"> </div>

