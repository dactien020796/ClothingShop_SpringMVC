        <script>
            $(document).ready(function () {
                $("#add-to-cart").click(function(event) {
                    event.preventDefault();
                    var productId = $(this).attr("data-cart-add");
                    var sizeId = $("#size").val();
                    var quantity = $("#quantity").val();
                    $.ajax({
                        type: "GET",
                        url: "/cart/add",
                        data: {
                            id: productId,
                            sizeId: sizeId,
                            qty: quantity
                        },
                        success: function (response) {
                            //alert(response[0]);
                            alert("Added to cart");
                            $('#simpleCart_quantity').html(response);
                        }
                    });
                });
            });
        </script>
